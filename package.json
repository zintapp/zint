{
  "name": "zint",
  "version": "0.3.1",
  "description": "a terminal emulator with escape to graphical UIs",
  "main": ".webpack/main",
  "author": "Guillaume de Cagny <hello@gdc.dev>",
  "license": "all rights reserved",
  "private": true,
  "devDependencies": {
    "@babel/core": "^7.17.10",
    "@babel/plugin-transform-runtime": "^7.17.10",
    "@babel/preset-env": "^7.17.10",
    "@babel/preset-react": "^7.16.7",
    "@electron-forge/cli": "^7.5.0",
    "@electron-forge/maker-deb": "^7.5.0",
    "@electron-forge/maker-rpm": "^7.5.0",
    "@electron-forge/maker-zip": "^7.5.0",
    "@electron-forge/plugin-webpack": "^7.5.0",
    "@types/react": "^18.3.11",
    "@types/uuid": "^10.0.0",
    "@vercel/webpack-asset-relocator-loader": "1.7.3",
    "babel-loader": "^9.2.1",
    "css-loader": "^7.1.2",
    "electron": "^31.6.0",
    "electron-builder": "^25.0.5",
    "electron-notarize": "^1.2.1",
    "electron-rebuild": "^3.2.7",
    "html-webpack-plugin": "^5.5.0",
    "json-loader": "^0.5.7",
    "node-loader": "^2.0.0",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.3.0",
    "typescript": "^5.6.2",
    "webpack": "^5.72.1",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.1.0"
  },
  "scripts": {
    "nodepty": "electron-rebuild --debug && electron-rebuild",
    "electron": "electron-forge start",
    "package:macintel": "electron-rebuild && NODE_ENV=production electron-forge package --platform=darwin --arch=x64",
    "package:macm1": "electron-rebuild && NODE_ENV=production electron-forge package --platform=darwin --arch=arm64",
    "testfullbuilder:macm1": "NODE_ENV=production electron-builder -c.extraMetadata.main .webpack/main/index.js --arm64 --mac --publish never",
    "fullbuilder:macm1": "NODE_ENV=production electron-builder -c.extraMetadata.main .webpack/main/index.js -c.mac.publish.path /app/updated/osx-notarized/arm64 --arm64 --mac --publish always",
    "fullbuilder:macintel": "NODE_ENV=production electron-builder -c.extraMetadata.main .webpack/main/index.js -c.mac.publish.path /app/updated/osx-notarized/intel --x64 --mac --publish always"
  },
  "dependencies": {
    "@react-rxjs/core": "^0.10.7",
    "@react-rxjs/utils": "^0.9.5",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/addon-webgl": "^0.18.0",
    "@xterm/xterm": "^5.5.0",
    "cors": "^2.8.5",
    "electron-store": "^10.0.0",
    "electron-updater": "^6.3.4",
    "emulate-tab": "^1.2.1",
    "express": "^4.18.1",
    "nan": "^2.20.0",
    "node-pty": "0.10.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "request": "^2.88.2",
    "rxjs": "^7.5.5",
    "uuid": "^10.0.0"
  },
  "config": {
    "forge": "./forge.config.js"
  },
  "build": {
    "extraResources": [
      {
        "from": "extraResources",
        "to": "extraResources"
      }
    ],
    "files": [
      ".webpack/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "asar": true,
    "asarUnpack": [
      "node_modules/node-pty/**/*"
    ],
    "mac": {
      "icon": "zinticon.icns",
      "category": "public.app-category.developer-tools",
      "target": ["dmg", "zip"]
    }
  }
}
